.simpleTable
  padding: 20px

.simpleTable table
  border: 1px solid #AE0345

.simpleTable th, .simpleTable td
  border: 1px solid #AE0345

.simpleTable thead tr
  background-color: #fff0f8

.simpleTable th
  color: #000
  font-weight: bold

.spec
  padding: 10px

.spec table
  border-top: 1px solid #e2e2e2
  border-bottom-color: #fff
  border-left: none
  border-right: none

.spec th, .spec td
  border: 1px solid #e2e2e2
  border-width: 1px 0
  padding-left: 0

.spec .odd, .spec .even
  background-color: #fff

