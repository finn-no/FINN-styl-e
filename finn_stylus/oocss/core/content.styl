body
  line-height: 1.5
  font-size 75%

body, table, input, textarea 
  font-family Arial,Helvetica,sans-serif
  color black

a
  text-decoration underline
  &:link, &:visited, &:hover
    color linkBlue
  &:hover
    color lightBlue
    
// ====== Headings ====== */
// .h1-.h6 classes should be used to maintain the semantically appropriate heading levels 
// - NOT for use on non-headings */
h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6
  font-weight bold
  font-style  normal
  line-height 1em
  &, a
    color linkBlue
    text-decoration: none

h1, .h1
  font-size 1.5em
  
  
h2, .h2
  font-size 1.25em
  
h3, .h3
  font-size 1.1em
  
h4, .h4
  font-size 1.0em
  
h5, .h5
  font-size 1em
  
h6, .h6
  font-size 1em
  &, a
    color linkBlue
  
  
// if additional headings are needed they should be 
// created via additional classes, never via location dependant styling */
.category
  font-size 108%
  font-weight normal
  font-style  normal
  text-transform uppercase
  &, a
    color  #333
  
  
  